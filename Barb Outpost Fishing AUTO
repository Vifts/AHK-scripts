	;---- Random mouse movement away from spot ----
		Random, rMoveX, 975, 1560
		Random, rMoveY, 25, 820

	ImageSearch, OutputX, OutputY, 1, 25, 1360, 815, D:\fish.png
	if (ErrorLevel = 2) {
		MsgBox Could not conduct the search.
		exitapp
	} else if (ErrorLevel = 1) {
	sleep sLookForFish
	} else {
	;Determine random area within fish spot
	Random, sFishX, OutputX-20, OutputX-85
	Random, sFishY, OutputY-20, OutputY+20
	
	Mousemove, sFishX, sFishY, sMove
	sleep sFishMove
	click
	sleep sFishMove
	
	Mousemove, rMoveX, rMoveY, sMove
	sleep sfishWait
	}
}

